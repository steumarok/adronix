{
    "exclude": ["node_modules", "**/*/dist", "**/*.test.ts"],
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "paths": {
            "@adronix/*": ["./packages/*"]
        }
    }
}